#!/bin/bash
# Runs the given command on the remote server.
#
# Examples:
#   $ nexec ls
#   $ nexec env
#   $ cat foo.sh | nexec bash
#   $ echo '{"foo":"bar"}' | nexec jq -r '.foo'
set -euo pipefail
test -f "$HOME/.import.sh" || curl -sfS https://import.pw > "$HOME/.import.sh"
source "$HOME/.import.sh"
import "import.pw/tootallnate/nexec@1.1.0"
nexec "$@"
